<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NameActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <!--   MainActivity  -->
    <style name="bottom_nav">
        <item name="android:background">@drawable/background_botton_menu</item>
        <item name="itemIconTint">@drawable/items_bottom_menu</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="ic_app">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/ic_app</item>
    </style>

    <!--    FirstFragment  -->

    <style name="tv_time">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="tv_name_user">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#B2C955</item>
    </style>

    <style name="tv_value">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="tv_unit_measurement">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#31662A</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

</resources>